<aura:component>
    <!-- notify to close the panel -->
    <aura:registerEvent name="notify" type="ui:notify" />
    <aura:attribute type="String[]" name="messages" description="messages for status icon component" />
    <aura:attribute type="Object" name="closeActionCallback" description="set after panel creation" />
    <aura:attribute type="Object" name="panelInstance" description="set after panel creation" />
    <aura:attribute type="boolean" name="isSaveDisabled" default="false" description="true if save is disabled" />
    <aura:attribute type="boolean" name="showOnlyNumberOfErrors" default="false" description="only show the number of errors in the body" />
    
    <div class="slds-grid slds-grid--align-end">
        <div class="slds-col slds-p-right_xx-small">
            <builder_platform_interaction:statusIcon 
                aura:id="statusIcon" messages="{!v.messages}"
                direction="north" type="error"
                showOnlyNumberOfErrors="true"
                headerforsummary="Resolve errors">
            </builder_platform_interaction:statusIcon>
        </div>
        <div class="slds-col slds-p-right_xx-small">
            <lightning:button class="test-property-editor-footer-cancel-button" title="{#$Label.FlowBuilderCommonPropertyEditor.cancelButton}" onclick="{!c.handleCancel}">{#$Label.FlowBuilderCommonPropertyEditor.cancelButton}</lightning:button>
        </div>
        <div class="slds-col slds-p-right_xx-small">
            <lightning:button class="test-property-editor-footer-ok-button" variant="brand" disabled="{!v.isSaveDisabled}" title="{#$Label.FlowBuilderCommonPropertyEditor.okButton}"  onclick="{!c.handleOk}">{#$Label.FlowBuilderCommonPropertyEditor.okButton}</lightning:button>
        </div>
    </div>
</aura:component>