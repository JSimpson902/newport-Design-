{
    "moduleNameMapper": {
        "^mock/flows/(.+)$": "<rootDir>/jest-mock-data/flows/$1",
        "^mock/debugResponse/(.+)$": "<rootDir>/jest-mock-data/debugResponse/$1",
        "^mock/(.+)$": "<rootDir>/jest-mock-data/$1/$1",
        "^builder_platform_interaction/sharedUtils/commands": "<rootDir>/../shared-utils/src/commands",
        "^builder_platform_interaction_mocks/sharedUtils$": "<rootDir>/../shared-utils/jest-modules/builder_platform_interaction/sharedUtils/sharedUtils",
        "^builder_platform_interaction_mocks/(.+)$": "<rootDir>/jest-modules/builder_platform_interaction/$1/$1",
        "^serverData/(.+)/(.+)$": "<rootDir>/jest-mock-data/results/FlowBuilderControllerGoldFileTest/test$1Serialization/$2",
        "^builder_platform_interaction/autoLayoutCanvas$": "<rootDir>/../auto-layout-canvas/dist/index.dev.js",
        "^builder_platform_interaction/sharedUtils$": "<rootDir>/../shared-utils/dist/index.esNext.js",
        "^builder_platform_interaction/flcBuilder$": "<rootDir>/../auto-layout-canvas-ui/src/builder_platform_interaction/flcBuilder/flcBuilder.ts",
        "^builder_platform_interaction/flcEvents$": "<rootDir>/../auto-layout-canvas-ui/src/builder_platform_interaction/flcEvents/flcEvents.ts",
        "^(builder_platform_interaction)/(.+)$": "<rootDir>/src/$1/$2/$2",
        "^(builder_framework)/(.+)$": "<rootDir>/../shared-utils/jest-modules/$1/$2/$2",

        "^lightning/configProvider$": "<rootDir>/jest-modules/lightning/configProvider/configProvider",
        "^lightning/input$": "<rootDir>/jest-modules/lightning/input/input",
        "^lightning/textarea$": "<rootDir>/jest-modules/lightning/textarea/textarea",
        "^lightning/groupedCombobox$": "<rootDir>/jest-modules/lightning/groupedCombobox/groupedCombobox",
        "^lightning/baseCombobox$": "<rootDir>/jest-modules/lightning/baseCombobox/baseCombobox",
        "^lightning/inputRichText$": "<rootDir>/jest-modules/lightning/inputRichText/inputRichText",
        "^analyzer_framework/(.+)$": "<rootDir>/jest-modules/analyzer_framework/$1/$1"
    },
    "moduleFileExtensions": ["ts", "js", "html"],
    "setupFilesAfterEnv": ["<rootDir>/jestSetup.js"],
    "clearMocks": true,
    "coverageDirectory": "../../../coverage",
    "collectCoverageFrom": [
        "<rootDir>/src/*/!(builderTestUtils)**/*",
        "!**/*Labels*",
        "!**/integrationTests/**/*",
        "!**/__tests__/**/*"
    ],
    "reporters": [
        "default",
        [
            "../../../node_modules/jest-html-reporter",
            {
                "pageTitle": "ui-interaction-builder-components Jest tests report",
                "outputPath": "<rootDir>/../../../jest-report/index.html",
                "includeFailureMsg": true
            }
        ]
    ]
}
