{
    "name": "@flow-builder/ui",
    "version": "0.0.1",
    "private": true,
    "npm2lwc": {
        "deployToCore": true,
        "namespace": "builder_platform_interaction",
        "ui": true
    },
    "scripts": {
        "build:ts": "tsc",
        "build": "yarn build:ts",
        "test": "lwc-test src",
        "test:update-snapshots": "lwc-test --updateSnapshot",
        "coverage": "lwc-test src -- --coverage",
        "lint": "eslint --max-warnings 2600 src/**/*.ts",
        "ci:test": "yarn test -- -- --verbose false",
        "ci:test:coverage": "yarn coverage -- --verbose false"
    },
    "files": [
        "src/builder_platform_interaction/*/!(__container__|__integration__|__perf__|__raptorMocks__|__test__|__tests__)"
    ],
    "lwc": {
        "mapNamespaceFromPath": true,
        "modules": [
            "src"
        ]
    },
    "devDependencies": {},
    "dependencies": {
        "@flow-builder/auto-layout-canvas": "0.0.1",
        "@flow-builder/shared-utils": "0.0.1"
    }
}
