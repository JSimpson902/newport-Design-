{
    "extends": ["../../../.eslintrc.json"],
    "rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/no-use-before-define": "off",
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/no-empty-function": "off",
        "@typescript-eslint/adjacent-overload-signatures": "off",
        "@typescript-eslint/no-this-alias": "off",
        "@typescript-eslint/camelcase": "off",
        "@typescript-eslint/class-name-casing": "off",
        "@typescript-eslint/ban-ts-ignore": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-non-null-assertion": "off",

        "jest/no-alias-methods": "off",
        "jest/valid-expect-in-promise": "off",
        "jest/valid-expect": "off",
        "jest/valid-describe": "off",

        "lwc-core/no-inline-disable": [
            "error",
            {
                "whitelist": {
                    "complexity": [
                        "**/builder_platform_interaction/reducers/elementsReducer.ts",
                        "**/builder_platform_interaction/reducers/flowPropertiesReducer.ts",
                        "**/builder_platform_interaction/reducers/elementsReducer.ts"
                    ],
                    "@lwc/lwc/no-async-operation": [
                        "**/builder_platform_interaction/conditionEditorPopover/conditionEditorPopover.ts",
                        "**/builder_platform_interaction/debugEditorPopover/debugEditorPopover.ts",
                        "**/builder_platform_interaction/debugPanel/debugPanel.ts",
                        "**/builder_platform_interaction/debugPanelBody/debugPanelBody.ts",
                        "**/builder_platform_interaction/debugEditorInputVariables/debugEditorInputVariables.ts",
                        "**/builder_platform_interaction/alcCanvas/alcCanvas.ts",
                        "**/builder_platform_interaction/alcCanvasContainer/alcCanvasContainer.ts",
                        "**/builder_platform_interaction/preloadLib/loader.ts",
                        "**/builder_platform_interaction/screenExtensionField/auraInterop.ts"
                    ],
                    "@lwc/lwc/no-document-query": ["**/builder_platform_interaction/drawingLib/drawingLib.ts"],
                    "@lwc/lwc/no-inner-html": [
                        "**/builder_platform_interaction/resourcedRichTextEditor/__tests__/richTextConverter.test.ts"
                    ],
                    "@lwc/lwc/valid-api": [
                        "**/builder_platform_interaction/connectorPicker/connectorPicker.ts",
                        "**/builder_platform_interaction/palette/palette.ts",
                        "**/builder_platform_interaction/accordionSectionWithIcon/accordionSectionWithIcon.ts"
                    ],
                    "@lwc/lwc/no-api-reassignments": [
                        "**/builder_platform_interaction/baseExpressionBuilder/baseExpressionBuilder.ts",
                        "**/builder_platform_interaction/collectionProcessorEditor/collectionProcessorEditor.ts",
                        "**/builder_platform_interaction/combobox/combobox.ts",
                        "**/builder_platform_interaction/entityResourcePicker/entityResourcePicker.ts",
                        "**/builder_platform_interaction/ferovResourcePicker/ferovResourcePicker.ts",
                        "**/builder_platform_interaction/processTypesTemplates/processTypesTemplates.ts",
                        "**/builder_platform_interaction/waitPlatformEvent/waitPlatformEvent.ts",
                        "**/builder_platform_interaction/welcomeMatBody/welcomeMatBody.ts"
                    ],
                    "@lwc/lwc/no-async-await": [
                        "**/builder_platform_interaction/guardrails/execute.ts",
                        "**/builder_platform_interaction/propertyEditorPanel/propertyEditorPanel.ts",
                        "**/builder_platform_interaction/screenExtensionField/auraInterop.ts",
                        "**/builder_platform_interaction/commands/baseCommand.ts",
                        "**/builder_platform_interaction/builderTestUtils/combobox.ts"
                    ],

                    "no-empty-function": ["**/builder_platform_interaction/alcConnectorMenu/alcConnectorMenu.ts"],
                    "no-loop-func": [
                        "**/builder_platform_interaction/translatorLib/flowToUiTranslator.ts",
                        "**/builder_platform_interaction/alcConversionUtils/freeFormToAutoLayout.ts",
                        "**/builder_platform_interaction/alcConversionUtils/autoLayoutToFreeForm.ts"
                    ],
                    "lwc-core/no-aura": [
                        "**/builder_platform_interaction/builderUtils/builderUtils.ts",
                        "**/builder_platform_interaction/screenExtensionField/auraInterop.ts"
                    ],
                    "lwc-core/no-interop-create": [
                        "**/builder_platform_interaction/builderUtils/builderUtils.ts",
                        "**/builder_platform_interaction/screenExtensionField/auraInterop.ts"
                    ],
                    "lwc-core/no-interop-dispatch": [
                        "**/builder_platform_interaction/builderUtils/builderUtils.ts",
                        "**/builder_platform_interaction/builderUtils/__tests__/builderUtils.test.ts"
                    ],
                    "lwc-core/no-interop-render": [
                        "**/builder_platform_interaction/builderUtils/builderUtils.ts",
                        "**/builder_platform_interaction/screenExtensionField/auraInterop.ts",
                        "**/jestSetup.ts"
                    ],
                    "lwc-core/no-dynamic-import": [
                        "**/builder_platform_interaction/propertyEditorPanel/propertyEditorPanel.ts",
                        "**/builder_platform_interaction/screenExtensionField/auraInterop.ts",
                        "**/builder_platform_interaction/integrationTests/__tests__/propertyEditor/propertyEditorIntegration.test.js"
                    ],
                    "lwc-core/no-process-env": ["**/jestSetup.js"],

                    "no-continue": [
                        "**/builder_platform_interaction/alcConversionUtils/freeFormToAutoLayout.ts",
                        "**/builder_platform_interaction/alcConversionUtils/autoLayoutToFreeForm.ts"
                    ],
                    "eqeqeq": [
                        "**/builder_platform_interaction/alcConversionUtils/freeFormToAutoLayout.ts",
                        "**/builder_platform_interaction/alcConversionUtils/autoLayoutToFreeForm.ts",
                        "**/builder_platform_interaction/alcConversionUtils/alcConversionUtils.ts"
                    ],
                    "@typescript-eslint/no-namespace": [
                        "**/builder_platform_interaction/integrationTests/__tests__/comboboxTestUtils.ts"
                    ],
                    "@typescript-eslint/no-unused-vars": [
                        "**/builder_platform_interaction/integrationTests/__tests__/comboboxTestUtils.ts"
                    ],
                    "no-redeclare": ["**/builder_platform_interaction/integrationTests/__tests__/comboboxTestUtils.ts"],
                    "no-unused-expressions": [
                        "**/builder_platform_interaction/integrationTests/__tests__/assignment/assignmentEditorIntegration.test.ts",
                        "**/builder_platform_interaction/integrationTests/__tests__/decision/decisionEditorExpressionBuilderIntegration.test.ts"
                    ],
                    "no-await-in-loop": [
                        "**/builder_platform_interaction/integrationTests/__tests__/groupedComboboxTestUtils.ts",
                        "**/builder_platform_interaction/integrationTests/__tests__/clud/recordCreateEditorIntegration.test.ts",
                        "**/builder_platform_interaction/integrationTests/__tests__/propertyEditor/propertyEditorIntegration.test.js"
                    ]
                }
            }
        ]
    }
}
