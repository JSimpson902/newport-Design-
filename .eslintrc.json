{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "@salesforce/eslint-config-lwc/recommended",
        "plugin:lwc-core/recommended",
        "plugin:lwc-core/style"
    ],
    "overrides": [
        {
            "files": ["*.ts"],
            "rules": {
                "lwc-core/no-inline-disable": "off",
                "lwc-core/valid-offline-wire": "off",
                "lwc-core/no-interop-create": "off",
                "lwc-core/no-aura": "off",
                "lwc-core/no-interop-render": "off",
                "space-before-function-paren": "off",
                "no-mixed-operators": "off",
                "no-confusing-arrow": "off",
                "no-prototype-builtins": "off"
            }
        }
    ]
}
