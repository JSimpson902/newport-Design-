    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug current Jest test file (ui packages)",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "${relativeFile}",
                "--config",
                "${relativeFileDirname}/../../../../jest.config.json"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true
        },
        {
            "name": "Debug current integration Jest test file (ui packages)",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "${relativeFile}",
                "--config",
                "${relativeFileDirname}/../../../../../jest.config.json"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true
        }
    ]
}
